// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  username  String?
  picture   String?
  role      role?       @default(newUser)
  about     AboutUser?  @relation("aboutUser")
  Inference Inference[] @relation("inference")
}

model AboutUser {
  id           Int    @id @default(autoincrement())
  organization String
  profession   String
  mtq          String
  sttq         String
  ttsq         String
  ocrq         String
  user         User   @relation("aboutUser", fields: [userId], references: [id])
  userId       Int    @unique
}

model Vote {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  liked       Boolean?
  disliked    Boolean?
  inference   Inference @relation("feedback", fields: [inferenceId], references: [id],onDelete: Cascade)
  inferenceId String       @unique
}

enum role {
  newUser
  powerUser
  waitlist
}

enum models {
  mt
  stt
  tts
  ocr
}

model Inference {
  id           String       @id @default(uuid())
  user         User      @relation("inference", fields: [userId], references: [id])
  userId       Int
  model        models
  modelVersion String?
  inputLang    String?
  outputLang   String?
  input        String
  output       String
  responseTime Int?
  vote     Vote? @relation("feedback")
  edited       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
